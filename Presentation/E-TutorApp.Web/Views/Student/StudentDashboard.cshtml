
@model StudentDashboardVM


@{
    ViewData["Title"] = "Courses";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Student Dashboard</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <!-- Bootstrap veya benzeri bir CSS framework kullanabilirsiniz -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <h1>Student Dashboard</h1>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Student Dashboard</a>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="#">Courses</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Teachers</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Messages</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Wishes</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Enrolled Courses</h5>
                        <p class="card-text">@Model.EnrolledCourseCount</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Completed Courses</h5>
                        <p class="card-text">@Model.CompletedCourseCount</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Active Courses</h5>
                        <p class="card-text">@Model.ActiveCourseCount</p>
                    </div>
                </div>
            </div>
        </div>

        <h3 class="mt-4">Course List</h3>
        <table class="table table-bordered mt-2">
            <thead>
                <tr>
                    <th>Course Name</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in Model.Courses)
                {
                    <tr>
                        <td>@course.Name</td>
                        <td>@course.IsActive</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
